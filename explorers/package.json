{
  "name": "wattxchange-explorer",
  "version": "1.0.0",
  "type": "module",
  "description": "Unified block explorer for WATTxchange ecosystem",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:wtx": "VITE_CHAIN=wtx VITE_OUT_DIR=dist/wtx vite build --outDir dist/wtx",
    "build:hth": "VITE_CHAIN=hth VITE_OUT_DIR=dist/hth vite build --outDir dist/hth",
    "build:flop": "VITE_CHAIN=flop VITE_OUT_DIR=dist/flop vite build --outDir dist/flop",
    "build:alt": "VITE_CHAIN=alt VITE_OUT_DIR=dist/alt vite build --outDir dist/alt",
    "build:all": "npm run build:wtx && npm run build:hth && npm run build:flop && npm run build:alt"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "axios": "^1.6.0",
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "vite": "^5.0.0"
  }
}
